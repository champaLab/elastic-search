# START BY COMMAND : 
chmod +x install-docker.bash
chmod +x start.bash



# Removes all volumes defined in docker-compose
docker-compose down -v

#Identify the Correct Path
docker volume inspect elastic-search-es01-1

sudo mkdir -p /var/lib/docker/volumes/elastic-search-es01-1/_data
sudo mkdir -p /var/lib/docker/volumes/elastic-search-es02-1/_data
sudo mkdir -p /var/lib/docker/volumes/elastic-search-es03-1/_data

sudo chown -R 1000:1000 /var/lib/docker/volumes/elastic-search-es01-1/_data
sudo chown -R 1000:1000 /var/lib/docker/volumes/elastic-search-es02-1/_data
sudo chown -R 1000:1000 /var/lib/docker/volumes/elastic-search-es03-1/_data

# view the error logs  //container-name
docker logs -f elastic-search-es01-1   
docker logs -f elastic-search-kibana-1


# sysctl vm.max_map_count
sudo sysctl -w vm.max_map_count=262144
sudo sysctl vm.max_map_count=262144
sudo sysctl -p

sudo chmod +x install-docker.bash
sudo chmod +x start.bash

